@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" style="padding-right: 1em; width: 80px; display: inline-block; padding-bottom: 1em;"></label>
                    <input asp-for="Input.Email" class="form-control" style="padding-left: 1em; width: 200px;" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="padding-right: 1em; width: 80px; display: inline-block; padding-bottom: 1em;"></label>
                    <input asp-for="Input.Password" class="form-control" style="padding-left: 1em; width: 200px;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group" style="padding-top: 1em;">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group" style="padding-top: 1em;">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

