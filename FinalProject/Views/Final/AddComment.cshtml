@model FinalProject.Models.Recruiter

@{
    ViewData["Title"] = "AddComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Comment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="comments" class="control-label"  style="padding-right: 1em; width: 80px; display: inline-block; padding-bottom: 1em;">Comment</label>
                <input asp-for="comments" class="form-control" style="padding-left: 1em; width: 800px; height: 30px"/>
                <span asp-validation-for="comments" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 2em;">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Comments">Back to List</a>
</div>

