@model FinalProject.Models.Recruiter

@{
    ViewData["Title"] = "EditComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Comment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="userId" />
            <div class="form-group">
                <input asp-for="comments" class="form-control" style="width: 800px; height:30px;" />
                <span asp-validation-for="comments" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 2em;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Comments">Back to List</a>
</div>

